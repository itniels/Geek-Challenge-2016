@using TheGeekStore.Core.Models
@model IEnumerable<TheGeekStore.Core.Models.NewsModel>
@{
    ViewBag.Title = "Index";
}

<h2>TGS News</h2>

@foreach (NewsModel item in Model)
{
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">
                <div class="row">
                    <div class="col-md-7">
                        <span>@item.Title</span>
                    </div>
                    <div class="col-md-5">
                        <span class="pull-right news-item-time">@item.Time</span>
                    </div>
                </div>

            </h3>
        </div>
        <div class="panel-body">
            <p>@item.GetExcerpt(500)</p>
            <div class="pull-right">
                @Html.ActionLink("Read more »", "ReadArticle", "News", new { id = item.Id }, new { id = item.Id })
            </div>
        </div>
    </div>
}