@using TheGeekStore.Core.Models
@model TheGeekStore.Core.ViewModels.ViewProductViewModel
@{
    ViewBag.Title = "ViewProduct";
}

<h2>@Model.Product.Name</h2>
<h4>@Model.Product.ProductNumber</h4>
<hr/>
<div class="row">
    <div class="col-md-6">
        <img src="@Model.Product.ImagePath" width="450"/>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-5">
                <span class="text text-info">Price:</span>
            </div>
            <div class="col-md-7">
                <span class="text text-primary">@Model.Product.Price.ToString("C")</span>
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-5">
                <span class="text text-info">In stock:</span>
            </div>
            <div class="col-md-7">
                <span class="text text-primary">@Model.Product.InStock pcs</span>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-5">
                <span class="text text-info">Purchased:</span>
            </div>
            <div class="col-md-7">
                <span class="text text-primary">@Model.Product.TimesPuchased times</span>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-5">
                <span class="text text-info">People looking at this:</span>
            </div>
            <div class="col-md-7">
                <span class="text text-primary">0 people</span>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-5">
                <span class="text text-info">People ready to buy this:</span>
            </div>
            <div class="col-md-7">
                <span class="text text-primary">0 people</span>
            </div>
        </div>
        <hr />
        <div class="row">
            @if (Model.Product.InStock > 0)
            {
                <button class="col-md-12 btn btn-success"><span class="glyphicon glyphicon-shopping-cart"></span> Add to cart</button>
            }
            else
            {
                <button class="col-md-12 btn btn-danger disabled">Out of stock</button>
            }
        </div>
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-md-12">
        <h4>Product Info</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p>@Model.Product.Description</p>
    </div>
</div>
<hr/>
<div class="well well-sm">
    <div class="row">
        <div class="col-md-12">
            <h4>Related products</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (!Model.RelatedProducts.Any())
            {
                <p>No related products found!</p>
            }
            @foreach (ProductModel item in Model.RelatedProducts)
            {
                <div class="col-md-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">@item.Name</h3>
                        </div>
                        <div class="panel-body">
                            <p>
                                @item.Description
                            </p>
                            <p>
                                <button class="pull-right btn btn-sm btn-primary" onclick="location.href = '@Url.Action("ViewProduct", "Product", new {id = item.Id})'">View Product &raquo;</button>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>